<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.g8.picuntu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:name="net.g8.picuntu.InstallerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.g8.picuntu.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.g8.picuntu.activities.SourceActivity">
        </activity>
        <activity android:name="net.g8.picuntu.activities.KernelActivity" >
        </activity>
        <activity android:name="net.g8.picuntu.activities.RootfsActivity" >
        </activity>
        <activity android:name="net.g8.picuntu.activities.LanActivity" >
        </activity>
        <activity android:name="net.g8.picuntu.activities.WanActivity" >
        </activity>
        <activity android:name="net.g8.picuntu.activities.OverviewActivity" >
        </activity>
        <activity android:name="net.g8.picuntu.activities.InstallNowActivity" >
        </activity>
        <activity android:name="net.g8.picuntu.activities.SuccessActivity">
        </activity>
        <activity android:name="net.g8.picuntu.activities.FailureActivity">
        </activity>
    </application>

</manifest>